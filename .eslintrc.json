{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-new": 0,
        "import/prefer-default-export": 0,
        "class-methods-use-this": 0,
        "import/extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
    },
    "globals": {
        "NodeJS": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"]
            }
        }
    }
}
